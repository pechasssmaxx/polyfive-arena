{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts",
        "../shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}